<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/equation_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/equation_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/equation_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/equation_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="="
        android:textSize="30sp" />

    <TextView
        android:id="@+id/equation_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView_err"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:visibility="gone"
        app:srcCompat="@mipmap/wrong" />

    <ImageView
        android:id="@+id/imageView_right"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:visibility="gone"
        app:srcCompat="@mipmap/right" />

</LinearLayout>
